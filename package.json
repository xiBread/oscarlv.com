{
	"name": "rosehaven",
	"type": "module",
	"private": true,
	"packageManager": "pnpm@9.6.0",
	"scripts": {
		"dev": "conc \"vite dev\" \"velite dev\"",
		"build": "velite build && vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write ."
	},
	"prettier": {
		"tabWidth": 4,
		"useTabs": true,
		"printWidth": 100,
		"plugins": [
			"prettier-plugin-svelte",
			"prettier-plugin-tailwindcss"
		]
	},
	"dependencies": {
		"@threlte/core": "8.0.0-next.15",
		"@threlte/extras": "9.0.0-next.22",
		"gsap": "^3.12.5",
		"imagekit": "^5.2.0",
		"lenis": "^1.1.13",
		"marked": "^14.1.2",
		"split-type": "^0.3.4",
		"three": "^0.168.0",
		"vaul-svelte": "^0.3.2"
	},
	"devDependencies": {
		"@antfu/eslint-config": "^3.5.1",
		"@fontsource-variable/jetbrains-mono": "^5.0.23",
		"@fontsource-variable/noto-serif-display": "^5.0.21",
		"@sveltejs/adapter-auto": "^3.2.4",
		"@sveltejs/kit": "^2.5.26",
		"@sveltejs/vite-plugin-svelte": "4.0.0-next.6",
		"@tailwindcss/vite": "4.0.0-alpha.24",
		"@types/eslint": "^9.6.1",
		"@types/node": "^22.5.4",
		"@types/three": "^0.168.0",
		"concurrently": "^9.0.0",
		"eslint": "^9.10.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "2.43.0",
		"prettier": "^3.3.3",
		"prettier-plugin-svelte": "^3.2.6",
		"prettier-plugin-tailwindcss": "^0.6.6",
		"svelte": "5.0.0-next.245",
		"svelte-check": "^4.0.1",
		"tailwindcss": "4.0.0-alpha.24",
		"tslib": "^2.7.0",
		"typescript": "^5.6.2",
		"velite": "0.1.1",
		"vite": "^5.4.4",
		"vite-plugin-glsl": "^1.3.0"
	}
}
