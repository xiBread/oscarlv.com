---
import PhotoWallItem from "./PhotoWallItem.astro";

const [short, long] = [800, 1200];
---

<div
	class="parallax relative z-20 flex items-center justify-center gap-5 overflow-hidden py-4 sm:gap-6"
	xyz="fade down duration-10 delay-2"
>
	<div class="xyz-in hidden flex-col gap-5 sm:gap-6 lg:flex" data-speed="3">
		<PhotoWallItem
			class="aspect-[2/3] w-36 lg:w-52"
			src="/portraits/abigail.jpg"
			width={short}
			height={long}
			alt="Abigail"
		/>
	</div>

	<div class="flex flex-col gap-5 sm:gap-6" data-speed="1">
		<PhotoWallItem
			class="xyz-in aspect-[3/2] w-44 md:w-52"
			src="/vox-obscura/sonder.jpg"
			xyz="inherit up delay-4"
			width={long}
			height={short}
			alt="Sonder"
		/>
		<PhotoWallItem
			class="xyz-in aspect-[2/3] w-44 md:w-52"
			src="/vox-obscura/halcyon.jpg"
			xyz="inherit delay-3"
			width={short}
			height={long}
			alt="Halcyon"
		/>
	</div>

	<div class="xyz-in flex flex-col gap-5 sm:gap-6" xyz="inherit up delay-5" data-speed="0">
		<PhotoWallItem
			class="aspect-[2/3] w-72 md:w-80 lg:w-96"
			src="/portraits/sam.jpg"
			width={short}
			height={long}
			alt="Sam"
		/>
	</div>

	<div class="flex flex-col gap-5 sm:gap-6" data-speed="1">
		<PhotoWallItem
			class="xyz-in aspect-[2/3] w-44 md:w-52"
			src="/portraits/angela.jpg"
			xyz="inherit up delay-3"
			width={short}
			height={long}
			alt="Angela"
		/>
		<PhotoWallItem
			class="xyz-in aspect-[3/2] w-44 md:w-52"
			src="/vox-obscura/nocturnal.jpg"
			xyz="inherit delay-4"
			width={long}
			height={short}
			alt="Nocturnal"
		/>
	</div>

	<div class="xyz-in hidden flex-col gap-5 sm:gap-6 lg:flex" data-speed="3">
		<PhotoWallItem
			class="aspect-[2/3] w-36 lg:w-52"
			src="/portraits/emily.jpg"
			width={short}
			height={long}
			alt="Emily"
		/>
	</div>
</div>

<script>
	import { registerImages } from "../lib/lightbox";
	import parallax from "../lib/parallax";

	registerImages();

	document.addEventListener("astro:page-load", () => {
		parallax(".parallax > div");
	});
</script>
