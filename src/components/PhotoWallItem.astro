---
import type { HTMLAttributes } from "astro/types";
import Image from "./Image.astro";
import Lightbox from "./Lightbox.vue";

export type Props = HTMLAttributes<"div"> & Parameters<typeof Image>[0];

const props = Astro.props;
---

<div
	class:list={[
		"relative flex-none overflow-hidden rounded-xl bg-zinc-200 dark:bg-zinc-900",
		props.class,
	]}
	xyz={props.xyz}
>
	<Lightbox client:only="vue">
		<Image
			src={props.src}
			width={props.width}
			height={props.height}
			class="absolute inset-0 h-full max-h-[90vh] w-full max-w-[90vw] object-cover"
		/>
	</Lightbox>
</div>
